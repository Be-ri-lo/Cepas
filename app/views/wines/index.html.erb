<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Strain</th>
      <th>Percentage</th>
      <th>Score</th>
    <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.strains.map(&:name).join(',') %></td>
        <td>      
          <ul>
            <% @wine_strains.each do |wine| %>
              <li> <%= wine.strain.name %> ( <%= wine.percentage %> ) </li>
            <% end %>
          </ul>
        </td>
        <td><%= wine.score %></td>
        <% if user_signed_in? || current_user.admin?  %>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? || current_user.admin?  %>
  <%= link_to 'New Wine', new_wine_path %>
  <%= link_to 'Strains', strains_path %>
  <%= link_to 'Blended', wine_strains_path %>
<% end %>
